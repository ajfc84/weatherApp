<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- Navigation -->
    <style name="NavButton">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <style name="NavMapButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="NavOptionButton" parent="NavButton">
        <item name="android:onClick">onClickOption</item>
    </style>
    <style name="NavRegionButton" parent="NavButton">
        <item name="android:onClick">onClickRegion</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
