<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_south_atlantic"
        >

        <Button
            android:id="@+id/region1"
            android:text="@string/satlantic"
            android:drawableLeft="@drawable/satlantic"
            style="@style/NavRegionButton"
            />
        <Button
            android:id="@+id/region2"
            android:text="@string/tropatlantic2"
            android:drawableLeft="@drawable/tropatlantic"
            style="@style/NavRegionButton"
            />
        <Button
            android:id="@+id/region3"
            android:text="@string/capebahia"
            android:drawableLeft="@drawable/capebahia"
            style="@style/NavRegionButton"
            />
        <Button
            android:id="@+id/region4"
            android:text="@string/bario"
            android:drawableLeft="@drawable/bario"
            style="@style/NavRegionButton"
            />
        <Button
            android:id="@+id/region5"
            android:text="@string/capehorn"
            android:drawableLeft="@drawable/capehorn"
            style="@style/NavRegionButton"
            />
        <Button
            android:id="@+id/region6"
            android:text="@string/safrica2"
            android:drawableLeft="@drawable/safrica"
            style="@style/NavRegionButton"
            />

    </LinearLayout>
</ScrollView>
