<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b1"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_one"
        android:drawableLeft="@drawable/med" />
    <Button
        android:id="@+id/b2"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_two"
        android:drawableLeft="@drawable/westindies"
        />
    <Button
        android:id="@+id/b3"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_three"
        android:drawableLeft="@drawable/natlantic"
        />
    <Button
        android:id="@+id/b4"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_four"
        android:drawableLeft="@drawable/satlantic"
        />
    <Button
        android:id="@+id/b5"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_five"
        android:drawableLeft="@drawable/npacific"
        />
    <Button
        android:id="@+id/b6"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_six"
        android:drawableLeft="@drawable/spacific"
        />
    <Button
        android:id="@+id/b7"
        android:background="@drawable/gradient_button"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/button_seven"
        android:drawableLeft="@drawable/indian"
        />
    <Button
        android:id="@+id/b8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/gradient_button"
        android:drawableLeft="@drawable/regatta"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/button_eight" />

</LinearLayout>